{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default (no vcpkg)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "default-debug",
            "displayName": "Default (no vcpkg) - Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/default-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "default-relwithdebinfo",
            "displayName": "Default (no vcpkg) - RelWithDebInfo",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/default-relwithdebinfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },

        {
            "name": "vcpkg",
            "displayName": "With vcpkg toolchain (requires VCPKG_ROOT)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/vcpkg",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "vcpkg-debug",
            "displayName": "With vcpkg toolchain - Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/vcpkg-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "vcpkg-relwithdebinfo",
            "displayName": "With vcpkg toolchain - RelWithDebInfo",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/vcpkg-relwithdebinfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },

        {
          "name": "msvc",
          "displayName": "MSVC 2022 (vcpkg if VCPKG_ROOT is set)",
          "generator": "Visual Studio 17 2022",
          "binaryDir": "${sourceDir}/build/msvc",
          "cacheVariables": {
            "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
          }
        }
    ],

    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "default-debug",
            "configurePreset": "default-debug"
        },
        {
            "name": "default-relwithdebinfo",
            "configurePreset": "default-relwithdebinfo"
        },

        {
            "name": "vcpkg",
            "configurePreset": "vcpkg"
        },
        {
            "name": "vcpkg-debug",
            "configurePreset": "vcpkg-debug"
        },
        {
            "name": "vcpkg-relwithdebinfo",
            "configurePreset": "vcpkg-relwithdebinfo"
        },

        {
            "name": "msvc-release",
            "configurePreset": "msvc",
            "configuration": "Release"
        },
        {
            "name": "msvc-debug",
            "configurePreset": "msvc",
            "configuration": "Debug"
        },
        {
            "name": "msvc-relwithdebinfo",
            "configurePreset": "msvc",
            "configuration": "RelWithDebInfo"
        }
    ],

    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "default-debug",
            "configurePreset": "default-debug"
        },
        {
            "name": "default-relwithdebinfo",
            "configurePreset": "default-relwithdebinfo"
        },

        {
            "name": "vcpkg",
            "configurePreset": "vcpkg"
        },
        {
            "name": "vcpkg-debug",
            "configurePreset": "vcpkg-debug"
        },
        {
            "name": "vcpkg-relwithdebinfo",
            "configurePreset": "vcpkg-relwithdebinfo"
        },

        {
            "name": "msvc-release",
            "configurePreset": "msvc",
            "configuration": "Release"
        },
        {
            "name": "msvc-debug",
            "configurePreset": "msvc",
            "configuration": "Debug"
        },
        {
            "name": "msvc-relwithdebinfo",
            "configurePreset": "msvc",
            "configuration": "RelWithDebInfo"
        }
    ]
}
